@model EMGBACAR.Models.Voiture

@{
    ViewData["Title"] = "Ajouter une voiture";
}

<h1>Ajouter une voiture</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom" class="form-label">Modèle</label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Annee" class="form-label">Année</label>
        <input asp-for="Annee" class="form-control" type="number" />
        <span asp-validation-for="Annee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix" class="form-label">Prix</label>
        <input asp-for="Prix" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarqueId" class="form-label">Marque</label>
        <select asp-for="MarqueId" class="form-control" asp-items="@(new SelectList(ViewBag.Marques, "Id", "Nom"))">
            <option value="">-- Sélectionnez une marque --</option>
        </select>
        <span asp-validation-for="MarqueId" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="EstVendue" class="form-check-input" type="checkbox" />
        <label asp-for="EstVendue" class="form-check-label">Vendue</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="EstIndisponible" class="form-check-input" type="checkbox" />
        <label asp-for="EstIndisponible" class="form-check-label">disponible</label>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
