@model EMGBACAR.Models.Voiture

@{
    ViewData["Title"] = "Supprimer la voiture";
}

<h1>Supprimer la voiture</h1>

<div>
    <h4>Voulez-vous vraiment supprimer cette voiture ?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Modèle</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Marque</dt>
        <dd class="col-sm-10">@Model.Marque?.Nom</dd>

        <dt class="col-sm-2">Année</dt>
        <dd class="col-sm-10">@Model.Annee</dd>

        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Prix.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
