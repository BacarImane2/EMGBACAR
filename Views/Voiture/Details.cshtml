@model EMGBACAR.Models.Voiture

@{
    ViewData["Title"] = "Détails de la voiture";
}

<h1>Détails de la voiture</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Modèle</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Marque</dt>
        <dd class="col-sm-10">@Model.Marque?.Nom</dd>

        <dt class="col-sm-2">Année</dt>
        <dd class="col-sm-10">@Model.Annee</dd>

        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Prix.ToString("C")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Vendue</dt>
        <dd class="col-sm-10">@(Model.EstVendue ? "Oui" : "Non")</dd>

        <dt class="col-sm-2">Indisponible</dt>
        <dd class="col-sm-10">@(Model.EstIndisponible ? "Non" : " Oui")</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
